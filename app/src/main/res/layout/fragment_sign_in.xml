<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment" >

    <Button
        android:id="@+id/Enterbutton"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_marginBottom="76dp"
        android:text="Enter"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/QUParkingText"
        android:layout_width="295dp"
        android:layout_height="94dp"
        android:layout_marginTop="200dp"
        android:text="Quinnipiac Parking"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EnterIDText"
        android:layout_width="261dp"
        android:layout_height="75dp"
        android:layout_marginTop="96dp"
        android:text="Enter Student ID:"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QUParkingText" />

    <EditText
        android:id="@+id/EnterIDEditText"
        android:layout_width="264dp"
        android:layout_height="61dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter a valid ID"
        app:layout_constraintBottom_toTopOf="@+id/Enterbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>